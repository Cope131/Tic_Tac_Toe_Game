<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid android:color="@color/blue_green_neon_80"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding android:bottom="5dp" android:top="0dp"/>
                    <stroke android:color="@color/blue_green_neon_80" android:width="5dp"  />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/blue_green_neon"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>